<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_rounded_dialog">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="114dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tham gia lớp học"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#2D3436"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã lớp do giáo viên cung cấp để bắt đầu học"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#636E72"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã lớp (Ví dụ: ABC-123)">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_class_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:maxLength="10"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_join"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:text="Vào lớp ngay"
        android:backgroundTint="#0984e3"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="10dp"/>

</LinearLayout>